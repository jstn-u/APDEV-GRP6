<script>
    document.addEventListener('DOMContentLoaded', function() {
        const editProfilePicBtn = document.querySelector('.edit-profile-pic-btn');
        const profilePic = document.querySelector('.pd-image');
        const editCoverImgBtn = document.querySelector('.edit-cover-img-btn');
        const coverImg = document.querySelector('.cover-img');

        // Function to update image source
        function updateImage(input, imageElement) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    imageElement.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Temporarily creating an invisible file input for profile picture change
        const profilePicInput = document.createElement('input');
        profilePicInput.type = 'file';
        profilePicInput.accept = 'image/*';
        profilePicInput.style.display = 'none';
        document.body.appendChild(profilePicInput);

        // Listening for the profile picture edit button click
        editProfilePicBtn.addEventListener('click', function() {
            profilePicInput.click();
        });

        // Change profile picture on file select
        profilePicInput.addEventListener('change', function() {
            updateImage(this, profilePic);
        });

        // Temporarily creating an invisible file input for cover image change
        const coverImgInput = document.createElement('input');
        coverImgInput.type = 'file';
        coverImgInput.accept = 'image/*';
        coverImgInput.style.display = 'none';
